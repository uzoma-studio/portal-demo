{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@payload-config": ["./src/payload.config.ts"],
      "@payloadcms/next/views": ["node_modules/@payloadcms/next/dist/exports/views.d.ts"],
      "@payloadcms/next/routes": ["node_modules/@payloadcms/next/dist/exports/routes.d.ts"],
      "@payloadcms/next/layouts": ["node_modules/@payloadcms/next/dist/exports/layouts.d.ts"],
      "@payloadcms/next/templates": ["node_modules/@payloadcms/next/dist/exports/templates.d.ts"],
      "@payloadcms/next/utilities": ["node_modules/@payloadcms/next/dist/exports/utilities.d.ts"],
    },
    "baseUrl": ".",
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/utils/richTextRenderer.js"  ],
  "exclude": [
    "node_modules"
  ]
}
